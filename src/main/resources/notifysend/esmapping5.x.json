//index template
{
  "template":"alert-*",
  "settings":{
    "number_of_shards":"3",
    "number_of_replicas":"1",
    "refresh_interval":"2s"
  },
  "mappings":{
    "HISTORY":{
      "properties":{
        "startsAt":{"type":"date","format":"epoch_second"},
        "endsAt":{"type":"date","format":"epoch_second"},
        "lastNotifyTime":{"type":"date","format":"epoch_second"},
        "lastReceiveTime":{"type":"date","format":"epoch_second"},
        "times":{"type":"integer"},
        "status":{"type":"keyword"},
        "alertname":{"type":"keyword"},
        "project":{"type":"keyword"},
        "unit":{"type":"keyword"},
        "suggest":{"type":"keyword"},
        "alertCategory":{"type":"keyword"},
        "description":{"type":"string","index":"analyzed"},
        "message":{"type":"text"},
        "labels.*":{
          "type":"keyword"
        }
      }
    }
  }
}